<odoo>
    <data>

        <!--        List view   -->
        <record model="ir.ui.view" id="event_management_organizer_list">
            <field name="name">organizer.list</field>
            <field name="model">event_management.organizer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="phone"/>
                    <field name="mail"/>
                    <field name="organizer_type"/>
                </tree>
            </field>
        </record>

        <!--        form view     -->
        <record id="event_management_organiser_form" model="ir.ui.view">
            <field name="name">organizer.form</field>
            <field name="model">event_management.organizer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="first_name"/>
                                <field name="last_name"/>
                                <field name="phone"/>
                            </group>
                            <group>
                                <field name="mail"/>
                                <field name="organizer_type"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="event_management_organizer_action">
            <field name="name">All Organizers</field>
            <field name="res_model">event_management.organizer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create your first Organizer!</p>
            </field>
        </record>


        <!-- Top menu item -->

        <menuitem name="All Organizers" id="event_management.menu_1_list" parent="event_management_menu_root"
                  action="event_management_organizer_action"/>
        -->
    </data>
</odoo>