<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <!--    Inherited view  -->
    <record id="view_event_inherit_form" model="ir.ui.view">
        <field name="name">event.inherit.form</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <!--            change attribute-->
            <xpath expr="//field[@name='organizer_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='address_id']" position="after">
                <field name="theme_event"/>
            </xpath>
            <xpath expr="//field[@name='address_id']" position="before">
                <field name="event_organizer_id"/>
            </xpath>
            <xpath expr="//page[@name='event_communication']" position="after">
                <page string="Materials" name="event_material">
                    <field name="material_ids">
                        <tree editable="bottom">
                            <field name="type"/>
                            <field name="tools"/>
                            <field name="event_id" />
                        </tree>
                        <form>
                            <group>
                                <field name="type"/>
                                <field name="tools"/>
                                <field name="event_id"  />
                            </group>

                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>